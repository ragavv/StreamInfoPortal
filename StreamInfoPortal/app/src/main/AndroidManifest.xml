<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hpm.sp.streaminfoportal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ApplicationBase"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutUs.AboutUsActivity"
            android:label="@string/title_activity_about_us"
            android:parentActivityName=".Main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hpm.sp.streaminfoportal.Main.MainActivity" />
        </activity>
        <activity
            android:name=".Articles.TatvaArticlesActivity"
            android:label="@string/title_activity_tatva_articles"
            android:parentActivityName=".Main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hpm.sp.streaminfoportal.Main.MainActivity" />
        </activity>
        <activity
            android:name=".BranchViewActivity"
            android:label="@string/title_activity_branch_view"
            android:parentActivityName=".Main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hpm.sp.streaminfoportal.Main.MainActivity" />
        </activity>
        <activity
            android:name=".Events.EventActivity"
            android:label="@string/title_activity_event"
            android:parentActivityName=".Main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hpm.sp.streaminfoportal.Main.MainActivity" />
        </activity>
        <activity
            android:name=".GuruParampare.GuruParampareActivity"
            android:label="@string/title_activity_guru_parampare"
            android:parentActivityName=".Main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hpm.sp.streaminfoportal.Main.MainActivity" />
        </activity>
        <activity
            android:name=".PravachanaActivity"
            android:label="@string/title_activity_pravachana"
            android:parentActivityName=".Main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hpm.sp.streaminfoportal.Main.MainActivity" />
        </activity>
        <activity android:name=".ContactInfoActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".EventDetailsActivity"
            android:label="@string/title_activity_event_details"
            android:parentActivityName=".Events.EventActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hpm.sp.streaminfoportal.Events.EventActivity" />
        </activity>
        <activity
            android:name=".WebView.WebViewActivity"
            android:label="@string/title_activity_web_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Articles.ArticleDetailsActivity"
            android:label="@string/title_activity_article_details"
            android:parentActivityName=".Articles.TatvaArticlesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hpm.sp.streaminfoportal.Articles.TatvaArticlesActivity" />
        </activity>
    </application>

</manifest>